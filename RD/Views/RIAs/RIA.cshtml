@model RD.Models.RIA;

@{
    ViewBag.Title = "Добавление РИД";
    Layout = "_Layout";
}

    <form method="post" asp-action="RIAs" class="my-2 col-10" style="border-style: dashed; border-width:thin; border-color: #343a40; padding: 8px; ">

    
        <table>

            <h2>Добавление РИД</h2>

            @Html.HiddenFor(m => m.Id)
            <tr>
                <td style="padding: 4px;">Результат:</td>
                <td style="padding: 4px;">
                    @Html.TextBoxFor(m => m.Result)
                </td>
            </tr>

            <tr>
                <td style="padding: 4px;">Реквизиты:</td>
                <td style="padding: 4px;">
                    @Html.TextBoxFor(m => m.Props)
                </td>
            </tr>

            <tr>
                <td style="padding: 4px;">Авторы:</td>
                <td style="padding: 4px;">
                    @Html.TextBoxFor(m => m.Authors)
                </td>
            </tr>

            <tr>
                <td style="padding: 4px;">Местоположение:</td>
                <td style="padding: 4px;">
                    @Html.TextBoxFor(m => m.Location)
                </td>
            </tr>

            <tr>
                <td style="padding: 4px;">
                </td>

                <td style="padding: 4px;">
                    <input type="button" value="Отмена" onClick='location.href="/"' />
                    <input class="btn btn-primary" style="margin-left: 6px;" type="submit" value="Добавить РИД" />
                </td>

                <td style="padding: 4px;">
                </td>
            </tr>

        </table>
    </form>

