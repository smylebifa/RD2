@model RD.Models.AnnualFinancing;

@{
    ViewBag.Title = "Редактирование финансирования";
    Layout = "_Layout";
}

@using (Html.BeginForm("Edit", "AnnualFinancings", FormMethod.Post))
{
    <table>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ThemeId)
        <tr>
            <td style="padding: 4px;">Год:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Year)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">Сумма:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Amount)
            </td>
        </tr>

        <tr>
            <td style="padding: 2px;">
                <input type="submit" value="Изменить финансирование" />
            </td>
            <td></td>
        </tr>

    </table>
}