@model RD.Models.ScientificDoc;

@{
    ViewBag.Title = "Добавление научно-технической документации";
    Layout = "_Layout";
}

<form method="post" asp-action="ScintificDocs" class="my-2 col-10" style="border-style: dashed; border-width:thin; border-color: #343a40; padding: 8px; ">


    <table>

        <h2>Добавление научно-технической документации</h2>

        @Html.HiddenFor(m => m.Id)
        <tr>
            <td style="padding: 4px;">Наименование:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">Результат:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Result)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">Расположение:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Location)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">Записи:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Note)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">
            </td>

            <td style="padding: 4px;">
                <input type="button" value="Отмена" onClick='location.href="/"' />
                <input class="btn btn-primary" style="margin-left: 6px;" type="submit" value="Добавить документацию" />
            </td>

            <td style="padding: 4px;">
            </td>
        </tr>

    </table>
</form>
