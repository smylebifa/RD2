@model RD.Models.Doc;

@{
    ViewBag.Title = "Документы";
    Layout = "_Layout";
}

<h3>Документы <a asp-controller="Docs" asp-action="Doc"> + </a> </h3>

<br>

<table class="table table-hover " style="text-align: center;">

    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Наименование</th>
            @*<th scope="col">Реквизиты</th>
        <th scope="col">Авторы</th>
        <th scope="col">Местоположение</th>*@
            <th scope="col"></th>
            <th scope="col"></th>

        </tr>
    </thead>

    <tbody>
        @foreach (var doc in @ViewBag.Docs)
        {
            <tr>
                <td></td>
                <td>@doc.NameDoc</td>
                @*<td>@doc.Props</td>
                <td>@doc.Authors</td>
                <td>@doc.Location</td>*@

                <td>@Html.ActionLink("изменить", "ChangingDoc", new { id = doc.Id })</td>
                <td><a onclick="deleteDoc('@doc.Id')" href="#"> удалить </a></td>
            </tr>
        }
    </tbody>
</table>



<script type="text/javascript">
        function deleteDoc(docId) {
            $.ajax({
                url: '/delete_doc/' + docId,
                type: 'DELETE',
                contentType: "application/json; charset=utf-8",
                success: function () {
                    location.reload()
                },
                error: function () {
                    alert("Ошибка выполнения!")
                }
            })
        }
</script>