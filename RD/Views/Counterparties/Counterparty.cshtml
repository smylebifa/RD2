@model RD.Models.Counterparty;

@{
    ViewBag.Title = "Редактирование контрагента";
    Layout = "_Layout";
}

@using (Html.BeginForm("Edit", "Counterparties", FormMethod.Post))
{
    <table>
        @Html.HiddenFor(m => m.Id)
        <tr>
            <td style="padding: 4px;">Имя:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">
            </td>

            <td style="padding: 4px;">
                <input type="button" value="Отмена" onClick='location.href="/"' />
                <input class="btn btn-primary" style="margin-left: 6px;" type="submit" value="Изменить контрагента" />
            </td>

            <td style="padding: 4px;">
            </td>
        </tr>

    </table>
}