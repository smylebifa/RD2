@model RD.Models.Theme;

@{
    ViewBag.Title = "Темы";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h2>Темы</h2>
        </div>
        <div class="col-sm">
            <h4> @Html.ActionLink("Добавить тему", "Theme") </h4>        
        </div>
        <div class="col-sm">
            <h4>2020</h4>
        </div>
        <div class="col-sm">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Выбор года
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">2020</a>
                    <a class="dropdown-item" href="#">2021</a>
                    <a class="dropdown-item" href="#">2022</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="overflow-x:auto;">
    <table class="table table-hover" style="text-align: center; ">

        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">№ темы</th>
                <th scope="col">Наименование темы</th>
                <th scope="col">ФИО руководителя</th>
                <th scope="col">Подразделение исполнитель</th>
                <th scope="col">Заказчик работы</th>
                <th scope="col">Срок - начало</th>
                <th scope="col">Срок - конец</th>
                <th scope="col">Общий объем финансирования</th>
                <th scope="col">НДС</th>
                <th scope="col">Объем без НДС</th>
                <th scope="col">Приказ об открытии темы</th>
                <th scope="col">Вид документа</th>
                <th scope="col">Реквизиты документа</th>
                <th scope="col">Вид исследования</th>
                <th scope="col">Область знания</th>
                <th scope="col">Статус</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var theme in @ViewBag.Themes)
                {
            <tr>
                <td><a class="nav-link text-primary" asp-area="" asp-route-themeName="@theme.Name" asp-controller="Stages" asp-action="Index">Этапы</a></td>
                <td>@theme.Number</td>
                <td>@theme.Name</td>
                <td>@theme.FioManager</td>
                <td>@theme.ExecutiveDepartment</td>
                <td>@theme.WorkStart</td>
                <td>@theme.WorkEnd</td>
                <td>@theme.Amount</td>
                <td>@theme.Vat</td>
                <td>@theme.AmountWithoutVat</td>
                <td>@theme.Decree</td>
                <td>@theme.DocType</td>
                <td>@theme.Props</td>
                <td>@theme.ResearchType</td>
                <td>@theme.Knowledge</td>
                <td>@theme.Status</td>
               
            </tr>
                }

