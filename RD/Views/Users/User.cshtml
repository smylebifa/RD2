@model RD.Models.User;

@{
    ViewBag.Title = "Добавление пользователя";
    Layout = "_Layout";
}


<h3>Добавление пользователя</h3>
<br>

<form method="post" asp-action="AddUser" style="border-color: #343a40;">


    <div class="mb-3 row">
        <label class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-5">
            <input type="text" name="Login" class="form-control" />
        </div>
        <div class="col-sm-6"></div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-5">
            <input type="password" name="Password" class="form-control" />
        </div>
        <div class="col-sm-6"></div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-1 col-form-label">ФИО</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="FullName" />
        </div>
        <div class="col-sm-6"></div>
    </div>


    <div class="mb-3 row">
        <label class="col-sm-1 col-form-label">Email</label>
        <div class="col-sm-5">
            <input type="email" class="form-control" name="Email" />
        </div>
        <div class="col-sm-6"></div>
    </div>
    

    <div class="mb-3 row">
        <label class="col-sm-1 col-form-label">Активен</label>

        <div class="col-sm-1">
            <input type="checkbox" name="IsActive" value="true" />
        </div>

        <div class="col-sm-10"></div>
    </div>

    <div class="mb-3 row">

        <label class="col-sm-1 col-form-label">Администратор</label>

        <div class="col-sm-1">
            <input type="checkbox" name="IsAdmin" value="true" />
        </div>

        <div class="col-sm-10"></div>
    </div>


    <div class="mb-3 row">
        <div class="col-sm-2"></div>

        <div class="col-sm-1">
            <input type="button" class="btn btn-outline-dark" value="Отмена" onClick='location.href="/Users"' />
        </div>

        <div class="col-sm-2">
            <input class="btn btn-outline-primary" type="submit" style="margin-left: 15px;" value="Добавить пользователя" />
        </div>

        <div class="col-sm-7"></div>
    </div>


</form>




