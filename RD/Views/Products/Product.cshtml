@model RD.Models.Product;

@{
    ViewBag.Title = "Редактирование продукты";
    Layout = "_Layout";
}

@using (Html.BeginForm("Edit", "Products", FormMethod.Post))
{
    <table>
        @Html.HiddenFor(m => m.Id)
        <tr>
            <td style="padding: 4px;">Наименование:</td>
            <td style="padding: 4px;">
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>

        <tr>
            <td style="padding: 4px;">
            </td>

            <td style="padding: 4px;">
                <input type="button" value="Отмена" onClick='location.href="/"' />
                <input class="btn btn-primary" style="margin-left: 6px;" type="submit" value="Изменить продукт" />
            </td>

            <td style="padding: 4px;">
            </td>
        </tr>

    </table>
}